# Cloud.ru AI Agents Configuration
IAM_KEY_ID=your_iam_key_id_here
IAM_SECRET_KEY=your_iam_secret_key_here
IAM_ENDPOINT=https://iam.api.cloud.ru
PROJECT_ID=your_project_id_here
CUSTOMER_ID=your_customer_id_here
EVOLUTION_PROJECT_ID=${PROJECT_ID}

# Agent Configuration
AGENT_NAME={{.ProjectName}}Agent
AGENT_DESCRIPTION={{.Description}}

# Database Configuration
{{if eq .DatabaseType "PostgreSQL"}}
DATABASE_URL=postgresql://user:password@localhost:5432/{{.ProjectName}}_db
{{else if eq .DatabaseType "Redis"}}
REDIS_URL=redis://localhost:6379/0
{{end}}

# External API Keys
{{if eq .ExternalAPIKeys "OpenAI"}}
OPENAI_API_KEY=your_openai_api_key_here
{{else if eq .ExternalAPIKeys "Anthropic"}}
ANTHROPIC_API_KEY=your_anthropic_api_key_here
{{else if eq .ExternalAPIKeys "Оба (OpenAI + Anthropic)"}}
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
{{end}}

# Development
DEBUG=true
LOG_LEVEL=INFO
