{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for MCP Servers YAML deployment configuration",
  "description": "Deploy MCP Servers with YAML configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "mcp-servers": {
      "description": "List of MCP servers to deploy",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the MCP server",
            "minLength": 3,
            "maxLength": 125
          },
          "description": {
            "type": "string",
            "description": "Description of the MCP server",
            "minLength": 3,
            "maxLength": 500
          },
          "options": {
            "type": "object",
            "description": "Configuration options for the MCP server",
            "additionalProperties": true
          },
          "!include": {
            "type": "string",
            "description": "Path to file to include",
            "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
          }
        },
        "required": ["name"],
        "additionalProperties": true
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "!include": {
      "type": "string",
      "description": "Path to file to include",
      "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
    }
  },
  "additionalProperties": true
}