{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for Agents YAML deployment configuration",
  "description": "Deploy AI Agents with YAML configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "agents": {
      "description": "List of agents to deploy",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique name of agent in project",
            "minLength": 3,
            "maxLength": 125
          },
          "description": {
            "type": "string",
            "description": "Description for your agent",
            "minLength": 3,
            "maxLength": 500
          },
          "options": {
            "type": "object",
            "description": "Configuration options for the agent",
            "additionalProperties": true
          },
          "llm_options": {
            "type": "object",
            "description": "LLM configuration options",
            "properties": {
              "provider": {
                "type": "string",
                "description": "LLM provider (openai, anthropic, etc.)"
              },
              "model": {
                "type": "string",
                "description": "Model name"
              },
              "temperature": {
                "type": "number",
                "minimum": 0,
                "maximum": 2
              },
              "max_tokens": {
                "type": "integer",
                "minimum": 1
              },
              "api_key": {
                "type": "string",
                "description": "API key for the provider"
              }
            },
            "additionalProperties": true
          },
          "mcp_servers": {
            "type": "array",
            "description": "List of MCP server names to attach",
            "items": {
              "type": "string",
              "description": "Name of MCP server"
            }
          },
          "!include": {
            "type": "string",
            "description": "Path to file to include",
            "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
          }
        },
        "required": ["name"],
        "additionalProperties": true
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "!include": {
      "type": "string",
      "description": "Path to file to include",
      "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
    }
  },
  "additionalProperties": true
}