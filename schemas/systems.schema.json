{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for Agent Systems YAML deployment configuration",
  "description": "Deploy AI Agent Systems with YAML configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "agent-systems": {
      "description": "List of agent systems to deploy",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique name of agent system in project",
            "minLength": 3,
            "maxLength": 125
          },
          "description": {
            "type": "string",
            "description": "Description for your agent system",
            "minLength": 3,
            "maxLength": 500
          },
          "agents": {
            "type": "array",
            "description": "List of agent names in this system",
            "items": {
              "type": "string",
              "description": "Name of agent to include in system"
            },
            "minItems": 1
          },
          "options": {
            "type": "object",
            "description": "Configuration options for the agent system",
            "additionalProperties": true
          },
          "!include": {
            "type": "string",
            "description": "Path to file to include",
            "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
          }
        },
        "required": ["name", "agents"],
        "additionalProperties": true
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "!include": {
      "type": "string",
      "description": "Path to file to include",
      "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
    }
  },
  "additionalProperties": true
}