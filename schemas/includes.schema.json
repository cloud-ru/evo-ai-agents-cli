{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Include Directive Schema",
  "description": "Schema for YAML include directives",
  "properties": {
    "!include": {
      "type": "string",
      "description": "Path to file to include",
      "pattern": "^(\\.[/\\\\])?[^/\\\\].*$"
    }
  },
  "additionalProperties": true,
  "required": ["!include"]
}